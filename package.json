{
  "devDependencies": {
    "cypress": "^14.3.3",
    "cypress-mochawesome-reporter": "^3.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "start-server-and-test": "^2.0.12"
  },
  "scripts": {
    "serve": "python3 -m http.server 8080",
    "cy:clean": "rm -rf cypress/results/* cypress/screenshots/* || true",
    "cy:run": "start-server-and-test serve http://localhost:8080 'cypress run'",
    "cy:run:functional": "start-server-and-test serve http://localhost:8080 'cypress run --spec \"cypress/e2e/functional/*.cy.js\"'",
    "cy:run:security": "start-server-and-test serve http://localhost:8080 'cypress run --spec \"cypress/e2e/security/*.cy.js\"'",
    "cy:open": "start-server-and-test serve http://localhost:8080 'cypress open --e2e --browser=chromium'",
    "test": "npm run cy:clean && npm run cy:run",
    "test:functional": "npm run cy:clean && npm run cy:run:functional",
    "test:security": "npm run cy:clean && npm run cy:run:security"
  }
}
